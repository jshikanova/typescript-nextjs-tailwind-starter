{
  "compilerOptions": {
    "target": "es2016",
    "lib": ["dom", "esnext"],
    "allowJs": false,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@utils": ["./app/utils"],
      "@utils/*": ["./app/utils/*"],
      "@ui": ["./ui"],
      "@ui/*": ["./ui/*"],
      "@features": ["./app/features"],
      "@features/*": ["./app/features/*"],
      "@api": ["./app/api"],
      "@api/*": ["./app/api/*"]
    }
  },
  "exclude": ["node_modules"],
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "pages/*.tsx"]
}
